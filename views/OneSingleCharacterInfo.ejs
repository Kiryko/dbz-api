<% include partials/head %>

<div class="container">
    <div class="header">
        <h1 class="title"><%= title %></h1>
    </div>
    <% if (name) { %>
        <div class="character-info">
            <h2 class="info-heading">Character Information</h2>
            <ul class="info-list">
                <li class="info-item"><span class="info-label">Name:</span> <%= name %></li>
                <li class="info-item"><span class="info-label">Race:</span> <%= race %></li>
                <li class="info-item"><span class="info-label">Gender:</span> <%= gender %></li>
                <li class="info-item"><span class="info-label">Ki:</span> <%= ki %></li>
                <li class="info-item"><span class="info-label">Max Ki:</span> <%= maxKi %></li>
                <li class="info-item"><span class="info-label">Affiliation:</span> <%= affiliation %></li>
                <li class="info-item"><span class="info-label">Description:</span> <%= description %></li>
            </ul>
        </div>
    <% } else { %>
        <p class="no-data">No character data available.</p>
    <% } %>

